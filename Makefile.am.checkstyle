.PHONY: check-style

CPPLINT_OPTIONS =

check-style:
	@echo "Starting to check coding style with cpplint..."
	find $(top_srcdir)/src $(top_srcdir)/test -name "*.cc" -o -name "*.cpp" -o -name "*.h" | xargs -r python $(top_srcdir)/scripts/cpplint.py --counting=detailed $(CPPLINT_OPTIONS)
	@echo "Successfully checked coding style with cpplint."
